// 不换行
no-wrap()
  text-overflow ellipsis
  overflow hidden
  white-space nowrap

// 超出文字隐藏
ellipsis-line($num)
  overflow hidden
  text-overflow ellipsis
  display -webkit-box
  -webkit-box-orient vertical
  -webkit-line-clamp $num

// 扩展点击区域
extend-click()
  position relative

  &:after
    content ''
    position absolute
    top -10px
    left -10px
    right -10px
    bottom -10px

// flex 通用
flex-center()
  display flex
  justify-content center
  align-items center

// border 设置
border-1px($color = #ccc, $radius = 5px, $direction = all)
  position relative

  &::after
    content ''
    pointer-events none
    display block
    position absolute
    border-radius $radius
    box-sizing border-box
    width 100%
    height 100%
    left 0
    top 0
    transform-origin 0 0

    if ($direction == all)
      border 1px solid $color
    else
      border-{$direction} 1px solid $color

    @media only screen and (-webkit-min-device-pixel-ratio 2)
      width 200%
      height 200%
      border-radius: $radius * 2
      transform scale(0.5)

    @media only screen and (-webkit-min-device-pixel-ratio 3)
      width 300%
      height 300%
      border-radius: $radius * 3
      transform scale(0.333)
